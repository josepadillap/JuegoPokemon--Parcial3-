<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.labsoftware06.juegopokemon.batalla">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/pokemon2"
        android:layout_marginTop="32dp"
        android:src="@color/abc_input_method_navigation_guard"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/pokemon1"
        android:src="@color/abc_input_method_navigation_guard"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/pokemon2_nombre"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/pokemon1_nombre"
        android:layout_above="@+id/pokemon1"
        android:layout_alignStart="@+id/pokemon1" />


</RelativeLayout>
